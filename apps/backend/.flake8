[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # F401: module imported but unused (common in __init__.py)
    F401
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    settings.py:E501
max-complexity = 12 